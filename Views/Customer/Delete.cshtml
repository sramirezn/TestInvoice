@model TestInvoice.Models.Customer

@{
    ViewBag.Title = "Delete Customer";
}

<h2>Delete Customer</h2>

<div>
    <h4>Are you sure you want to delete this customer?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CustName)</dt>
        <dd>@Html.DisplayFor(model => model.CustName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Adress)</dt>
        <dd>@Html.DisplayFor(model => model.Adress)</dd>

        <dt>@Html.DisplayNameFor(model => model.Status)</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>

        <dt>@Html.DisplayNameFor(model => model.CustomerType.Description)</dt>
        <dd>@Html.DisplayFor(model => model.CustomerType.Description)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
